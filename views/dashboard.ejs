<%- include('partials/header') -%>

<div class="d-flex pt-3">
    <div class="card mx-1">
        <div class="card-body">
            <h5 class="card-title">Total Links : </h5>
            <p class="card-text"><%= shortUrls.length %></p>
        </div>
    </div>
    <div class="card mx-1">
        <div class="card-body">
            <h5 class="card-title">Total Visitors : </h5>
            <p class="card-text"><%= Object.values(shortUrls).reduce((t, {clicks}) => t + clicks, 0) %> </p>
        </div>
    </div>
</div>
<table class="table table-striped table-responsive">
    <thead>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
    </thead>
    <tbody>
        <% shortUrls.forEach(urlShortener => { %>
        <tr>
            <td><a href="<%= urlShortener.fullUrl %>"><%= urlShortener.fullUrl %></a></td>
            <td><a href="<%= urlShortener.shortUrl %>"><%= urlShortener.shortUrl %></a></td>
            <td><%= urlShortener.clicks %></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<%- include('partials/footer') -%>