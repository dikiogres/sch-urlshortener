<%- include('partials/header') -%>

        <h1>URL Shortener</h1>
        <form action="/shortener" method="POST" class="form-inline my-4">
            <label for="fullUrl" class="sr-only"></label>
            <input required placeholder="Paste your link here!" name="fullUrl" id="fullUrl" class="col mr-3 my-3">
            <button type="submit" class="btn btn-success">Generate</button>
        </form> 
        <table class="table table-striped table-responsive">
            <thead>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% shortUrls.forEach(urlShortener => { %>
                <tr>
                    <td><a href="<%= urlShortener.fullUrl %>"><%= urlShortener.fullUrl %></a></td>
                    <td><a href="<%= urlShortener.shortUrl %>"><%= urlShortener.shortUrl %></a></td>
                    <td><%= urlShortener.clicks %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>

<%- include('partials/footer') -%>